<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TestPage.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TestPage"
    Shell.FlyoutBehavior="Disabled"
    Title="TestPage">

    <TabBar FlexLayout.AlignSelf="Auto" >
        <ShellContent Icon="user" Title="Working 1" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Icon="user" Title="Working 2" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Icon="user" Title="Working 3" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Icon="user" Title="Working 4" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Icon="user" Title="Not working 1" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Icon="user" Title="Not working 2" ContentTemplate="{DataTemplate local:MainPage}" />
    </TabBar>

</Shell>
